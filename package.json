{
  "name": "voice-communicator-soundboard",
  "version": "1.0.0",
  "description": "A TypeScript PWA soundboard for voice communication",
  "main": "index.ts",
  "scripts": {
    "prestart": "node scripts/generate-env.mjs",
    "start": "webpack serve --mode development",
    "prebuild": "node scripts/generate-env.mjs",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development --open",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "dotenv-webpack": "^8.1.1",
    "happy-dom": "^18.0.1",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^3.3.0",
    "tailwindcss": "^4.1.11",
    "ts-loader": "^9.4.0",
    "vitest": "^3.2.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "."
